{
  "name": "webpack5-pug-tailwindcss-starter",
  "version": "1.0.0",
  "description": "Webpack 5 configuration for Single or Multipage websites using Pug, Tailwind CSS, PostCSS, Babel and Browsersync",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack serve --mode development",
    "build": "cross-env NODE_ENV=production webpack --mode production",
    "lint": "eslint --ext .js ./src/js",
    "lint:fix": "eslint --ext .js --fix ./src/js",
    "stylelint": "stylelint ./src/sass/**/*.{css,scss,sass}",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "webpack",
    "webpack 5",
    "webpack multipage",
    "webpack tailwindcss",
    "webpack pug",
    "tailwindcss",
    "pug"
  ],
  "author": "Elena Bravo",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@babel/eslint-parser": "7.19.1",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "7.20.7",
    "@babel/preset-env": "7.20.2",
    "@webdiscus/pug-loader": "2.10.2",
    "autoprefixer": "10.4.13",
    "babel-eslint": "10.1.0",
    "babel-loader": "9.1.2",
    "babel-preset-env": "1.7.0",
    "browser-sync": "2.27.11",
    "browser-sync-webpack-plugin": "2.3.0",
    "bufferutil": "4.0.7",
    "copy-webpack-plugin": "11.0.0",
    "cross-env": "7.0.3",
    "css-loader": "6.7.3",
    "css-minimizer-webpack-plugin": "4.2.2",
    "eslint": "8.32.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-config-standard": "17.0.0",
    "eslint-loader": "4.0.2",
    "eslint-plugin-import": "2.27.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-standard": "5.0.0",
    "fibers": "5.0.3",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.3",
    "mini-css-extract-plugin": "2.7.2",
    "popper.js": "1.16.1",
    "postcss": "8.4.21",
    "postcss-loader": "7.0.2",
    "postcss-preset-env": "7.8.3",
    "prettier": "2.8.3",
    "pug": "3.0.2",
    "raw-loader": "4.0.2",
    "replace-ext": "2.0.0",
    "style-loader": "3.3.1",
    "stylelint": "14.16.1",
    "stylelint-config-standard": "32.0.0",
    "tailwindcss": "3.2.4",
    "terser-webpack-plugin": "5.3.6",
    "typescript": "4.9.4",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/elenabravo/webpack5-pug-tailwindcss-starter"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run stylelint"
    }
  }
