{
  "name": "webpack5-pug-tailwindcss-starter",
  "version": "1.0.0",
  "description": "Webpack 5 configuration for Single or Multipage websites using Pug, Tailwind CSS, PostCSS, Babel and Browsersync",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack serve --mode development",
    "build": "cross-env NODE_ENV=production webpack --mode production",
    "lint": "eslint --ext .js ./src/js",
    "lint:fix": "eslint --ext .js --fix ./src/js",
    "stylelint": "stylelint ./src/sass/**/*.{css,scss,sass}",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "webpack",
    "webpack 5",
    "webpack multipage",
    "webpack tailwindcss",
    "webpack pug",
    "tailwindcss",
    "pug"
  ],
  "author": "Elena Bravo",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "7.15.5",
    "@babel/eslint-parser": "7.15.7",
    "@babel/plugin-proposal-class-properties": "7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "7.15.6",
    "@babel/preset-env": "7.15.6",
    "autoprefixer": "10.3.6",
    "babel-core": "6.26.3",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.2",
    "babel-preset-env": "1.7.0",
    "browser-sync": "2.27.5",
    "browser-sync-webpack-plugin": "2.3.0",
    "bufferutil": "4.0.4",
    "copy-webpack-plugin": "9.0.1",
    "cross-env": "7.0.3",
    "css-loader": "6.3.0",
    "css-minimizer-webpack-plugin": "3.0.2",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-loader": "4.0.2",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-standard": "5.0.0",
    "fibers": "5.0.0",
