    "raw-loader": "4.0.2",
    "replace-ext": "2.0.0",
    "style-loader": "3.3.1",
    "stylelint": "14.9.1",
    "stylelint-config-standard": "26.0.0",
    "tailwindcss": "3.1.8",
    "terser-webpack-plugin": "5.3.3",
    "typescript": "4.7.4",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.9.3"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/elenabravo/webpack5-pug-tailwindcss-starter"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run stylelint"
    }
  }
