    "style-loader": "3.3.0",
    "stylelint": "13.13.1",
    "tailwindcss": "^2.2.16",
    "terser-webpack-plugin": "5.2.4",
    "typescript": "4.4.3",
    "webpack": "5.56.0",
    "webpack-cli": "4.8.0",
    "webpack-dev-server": "4.3.0"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/elenabravo/webpack5-pug-tailwindcss-starter"
  },
