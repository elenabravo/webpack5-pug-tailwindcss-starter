    "style-loader": "3.3.1",
    "stylelint": "14.2.0",
    "stylelint-config-standard": "24.0.0",
    "tailwindcss": "3.0.10",
    "terser-webpack-plugin": "5.3.0",
    "typescript": "4.5.4",
    "webpack": "5.65.0",
    "webpack-cli": "4.9.1",
    "webpack-dev-server": "4.7.2"
  },
  "dependencies": {
    "remove": "0.1.5"
  },
  "repository": {
    "type": "git",
